<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Louvre"
            android:textSize="20dp"
            android:id="@+id/d_content"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_but"
            android:src="@drawable/maps"
            android:onClick="openMap"
            android:layout_alignBottom="@+id/d_content"
            android:layout_alignTop="@+id/d_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarThumbVertical="@color/colorPrimary"
            android:fillViewport="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDesc"
                android:text="1er arrondissement de Paris, situé à..."
                android:textSize="20dp"
                android:layout_margin="3dp"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </ScrollView>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lonlat"
        android:text="lonlat"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Fermer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/d_but"
        android:background="?attr/colorPrimary"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lonlat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>